<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".adapters.viewtotalrecordsadapter">
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="3dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="4dp"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/idcoffee"
            android:hint="1234"
            android:textColor="#000000"/>
        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:id="@+id/farmer"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/idcoffee"
            android:hint="ceasar bechu maina"
            android:textColor="#000000"/>
        <TextView
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:id="@+id/grade11"
            android:layout_toRightOf="@+id/farmer"
            android:textColor="#000000"
            android:layout_marginLeft="2dp"
            android:hint="123 kg"/>
        <TextView
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:id="@+id/grade12"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/grade11"
            android:textColor="#000000"
            android:hint="123 kg"/>
        <TextView
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:id="@+id/grade13"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/grade12"
            android:textColor="#000000"
            android:hint="123 kg"/>
    </RelativeLayout>

</RelativeLayout>
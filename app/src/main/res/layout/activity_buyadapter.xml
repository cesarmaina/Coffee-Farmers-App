<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".adapters.buyadapter">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0000BCD4"
        android:padding="5dp">
        <ImageView
            android:id="@+id/sellimg"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/account1" />

        <RelativeLayout
            android:id="@+id/rs1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@+id/sellimg">

            <TextView
                android:id="@+id/pname"
                android:layout_width="54dp"
                android:layout_height="20dp"
                android:layout_marginTop="15dp"
                android:text="Name:" />

            <TextView
                android:id="@+id/productname"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/pname" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rs2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rs1"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/sellimg">

            <TextView
                android:id="@+id/pcost"
                android:layout_width="54dp"
                android:layout_height="20dp"
                android:layout_marginTop="15dp"
                android:text="Cost:" />

            <TextView
                android:id="@+id/productcost"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/pcost" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rs3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rs2"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/sellimg">

            <TextView
                android:id="@+id/pquantity"
                android:layout_width="58dp"
                android:layout_height="20dp"
                android:layout_marginTop="15dp"
                android:text="Quantity:" />

            <TextView
                android:id="@+id/productquantity"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/pquantity" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rs5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rs3"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/sellimg">
            <TextView
                android:id="@+id/pcount"
                android:layout_width="58dp"
                android:layout_height="20dp"
                android:layout_marginTop="15dp"
                android:text="Count:" />

            <TextView
                android:id="@+id/productcount"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/pcount" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rs6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rs5"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/sellimg">

            <Button
                android:id="@+id/btnbuy"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:background="@drawable/roundcorner"
                android:text="BUY" />

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
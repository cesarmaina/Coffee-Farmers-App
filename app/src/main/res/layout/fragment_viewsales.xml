<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.viewsales">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:id="@+id/r1">
        <TextView
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:text="receipt"
            android:textColor="#000000"
            android:layout_marginLeft="5dp"
            android:id="@+id/receipt"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="buyer name"
            android:id="@+id/buyer"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/receipt" />
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="item "
            android:id="@+id/item"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/buyer" />
        <TextView
            android:layout_width="38dp"
            android:layout_height="wrap_content"
            android:text="count"
            android:id="@+id/bags"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/item" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cost"
            android:layout_marginLeft="3dp"
            android:id="@+id/cost"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/bags"/>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/r1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/salesrecycler"/>
</RelativeLayout>